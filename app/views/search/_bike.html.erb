<div class="search-card">
  <%= link_to bike_path(bike.id), target:"_blank", rel:"noopener noreferrer nofollow" do %>
    <div class="bike-image-image" style='background-image: url("<%= asset_url(bike.image_name) %>")'>
    </div>

    <div class="bike-info">
      <h4><%= bike.name.capitalize %></h4>
      <h6><%= bike.description&.capitalize %></h6>
      <h6><%= number_to_currency(bike.price_per_day) %> per day</h6>
    </div>
  <% end %>
</div>

